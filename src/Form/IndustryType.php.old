<?php

namespace App\Form;

use App\Entity\Industry;
use Symfony\Component\Form\AbstractType;
use Symfony\Component\Form\FormBuilderInterface;
use Symfony\Component\OptionsResolver\OptionsResolver;
use Symfony\Component\Form\Extension\Core\Type\TextType;
class IndustryType extends AbstractType
{
    public function buildForm(FormBuilderInterface $builder, array $options)
    {
        $builder
            ->add('name',TextType::class,['label'=>'ስም'])
            ->add('kebele')
            ->add('location')
            ->add('houseNo')
            ->add('phoneNo')
            ->add('rYear')
            ->add('Icatagory')
            ->add('IWorkType')
            ->add('IorganizedType')
            ->add('tinNo')
            ->add('SCapitalAmount')
            ->add('SCapitalSource')
            ->add('CCapitalCash')
            ->add('CCapitalAsset')
            ->add('progressLevel')
            ->add('IMemberMale')
            ->add('IMemberFemale')
            ->add('IDisabledMemberMale')
            ->add('IDisabledMemberFemale')
            ->add('BEmployeeMale')
            ->add('BEmployeeFemale')
            ->add('BFixedTermMale')
            ->add('BFixedTermFemale')
            ->add('BContratMale')
            ->add('BContratFemale')
            ->add('CEmployeeMale')
            ->add('CEmployeeFemale')
            ->add('CFixedTermMale')
            ->add('CFixedTermFemale')
            ->add('CContratMale')
            ->add('CContratFemale')
        ;
    }

    public function configureOptions(OptionsResolver $resolver)
    {
        $resolver->setDefaults([
            'data_class' => Industry::class,
        ]);
    }
}
